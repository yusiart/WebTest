
@model TestWebApp.Models.Address

@{
    ViewData["Title"] = "AddAddress";
}

<h1>Create New Address</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-controller="Address" asp-action="AddAddress">

            @*<form asp-controller="Address" asp-action="AddAddress" asp-route-id="@Model.CustomerId">
            <input type="hidden" asp-for="CustomerId" />
