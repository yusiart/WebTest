@model IEnumerable<TestWebApp.Models.Address>

@{
    ViewData["Title"] = "Index";
}

<h1>Address Rows</h1>

<dl class="row">
    @{var counter = 1; }

    @foreach (var item in Model)
    {
        <div class="col">
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => item.AddressId)
                </dt>
                <dd>
                    @Html.DisplayFor(model => item.AddressId)
                </dd>
            </dl>
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => item.StreetAddress)
                </dt>
                <dd>
                    @Html.DisplayFor(model => item.StreetAddress)
                </dd>
            </dl>
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => item.Country.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => item.Country.Name)
                </dd>
            </dl>
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => item.Zip)
                </dt>
                <dd>
                    @Html.DisplayFor(model => item.Zip)
                </dd>
            </dl>
            <dl>
                <dt>
                    <a asp-controller="Address" asp-action="EditAddress" asp-route-id="@item.AddressId">Edit</a> |
                    <a asp-controller="Address" asp-action="DeleteAddress" asp-route-id="@item.AddressId">Delete</a>
                </dt>
            </dl>
        </div>

        if (counter % 3 == 0)
        {
            @:</dl>
            @:<dl class="row">
        }

        counter++;
    }
</dl>

<p>
    <a asp-controller="Customers" asp-action="Index">Back to List</a>
</p>